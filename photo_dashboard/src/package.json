{
  "name": "vue-former",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --mode production --target lib --name VueFormer ./src/components/VueFormer.vue",
    "lint": "vue-cli-service lint",
    "api-server": "node ./src/mock/server.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "async-validator": "^1.8.5",
    "moment": "^2.23.0",
    "vue": "^2.5.17",
    "vue-masked-input": "^0.5.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.4",
    "@vue/cli-plugin-eslint": "^3.0.4",
    "@vue/cli-service": "^3.2.0",
    "json-server": "^0.14.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.4.5",
    "postcss-custom-properties": "^8.0.9",
    "postcss-nested": "^4.1.0",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-nested": {},
      "postcss-custom-properties": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
